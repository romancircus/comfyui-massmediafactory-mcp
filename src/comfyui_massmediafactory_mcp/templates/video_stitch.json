{
  "_meta": {
    "description": "Video Stitch - Combine multiple video clips into a sequence",
    "type": "video_combine",
    "use_case": "Combine video clips with optional transitions (replaces basic Premiere/CapCut edits)",
    "replaces": "Premiere Pro / CapCut for simple video combining",
    "parameters": [
      "VIDEO_1",
      "VIDEO_2",
      "VIDEO_3",
      "TRANSITION_TYPE",
      "TRANSITION_FRAMES",
      "OUTPUT_FPS"
    ],
    "defaults": {
      "VIDEO_3": "",
      "TRANSITION_TYPE": "none",
      "TRANSITION_FRAMES": 12,
      "OUTPUT_FPS": 24
    },
    "agent_notes": {
      "VIDEO_1": "Path to first video clip",
      "VIDEO_2": "Path to second video clip",
      "VIDEO_3": "Optional: Path to third video clip (leave empty to skip)",
      "TRANSITION_TYPE": "none, fade, dissolve, wipe",
      "TRANSITION_FRAMES": "Number of frames for transition (12 = 0.5s at 24fps)",
      "limitations": [
        "All clips should have same resolution for best results",
        "Audio is preserved from all clips",
        "For complex edits, use dedicated video editor"
      ]
    },
    "custom_nodes_required": [
      "ComfyUI-VideoHelperSuite"
    ],
    "vram_required_gb": 4,
    "note": "VHS node names verified against VideoHelperSuite. If nodes not found, check custom_nodes installation.",
    "vram_min": 4,
    "tags": [
      "type:utility",
      "capability:stitch"
    ],
    "model": "utility",
    "version": "1.0.0",
    "hub_hash": "ed3fccbd140baaa8"
  },
  "1": {
    "class_type": "VHS_LoadVideo",
    "_comment": "Load first video clip",
    "inputs": {
      "video": "{{VIDEO_1}}",
      "force_rate": "{{OUTPUT_FPS}}",
      "force_size": "Disabled",
      "custom_width": 0,
      "custom_height": 0,
      "frame_load_cap": 0,
      "skip_first_frames": 0,
      "select_every_nth": 1
    }
  },
  "2": {
    "class_type": "VHS_LoadVideo",
    "_comment": "Load second video clip",
    "inputs": {
      "video": "{{VIDEO_2}}",
      "force_rate": "{{OUTPUT_FPS}}",
      "force_size": "Disabled",
      "custom_width": 0,
      "custom_height": 0,
      "frame_load_cap": 0,
      "skip_first_frames": 0,
      "select_every_nth": 1
    }
  },
  "3": {
    "class_type": "VHS_MergeImages",
    "_comment": "Concatenate video frames (simple merge, no transition)",
    "inputs": {
      "images_a": [
        "1",
        0
      ],
      "images_b": [
        "2",
        0
      ]
    }
  },
  "4": {
    "class_type": "VHS_MergeAudio",
    "_comment": "Concatenate audio tracks",
    "inputs": {
      "audio_a": [
        "1",
        2
      ],
      "audio_b": [
        "2",
        2
      ]
    }
  },
  "5": {
    "class_type": "VHS_VideoCombine",
    "_comment": "Export combined video with audio",
    "inputs": {
      "images": [
        "3",
        0
      ],
      "audio": [
        "4",
        0
      ],
      "frame_rate": "{{OUTPUT_FPS}}",
      "loop_count": 0,
      "filename_prefix": "stitched_video",
      "format": "video/h264-mp4",
      "pingpong": false,
      "save_output": true,
      "pix_fmt": "yuv420p",
      "crf": 19,
      "save_metadata": true
    }
  }
}
