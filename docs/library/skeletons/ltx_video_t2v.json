{
  "_meta": {
    "type": "skeleton",
    "model": "LTX-Video",
    "workflow": "text-to-video",
    "sampler_type": "SamplerCustom",
    "notes": "Do NOT use KSampler. Always use LTXVConditioning wrapper."
  },
  "nodes": [
    {"id": "1", "type": "CheckpointLoaderSimple", "outputs": ["MODEL", "CLIP", "VAE"]},
    {"id": "2", "type": "CLIPLoader", "outputs": ["CLIP"]},
    {"id": "3", "type": "CLIPTextEncode", "role": "positive", "outputs": ["CONDITIONING"]},
    {"id": "4", "type": "CLIPTextEncode", "role": "negative", "outputs": ["CONDITIONING"]},
    {"id": "5", "type": "LTXVConditioning", "outputs": ["CONDITIONING+", "CONDITIONING-"]},
    {"id": "6", "type": "EmptyLTXVLatentVideo", "outputs": ["LATENT"]},
    {"id": "7", "type": "LTXVScheduler", "outputs": ["SIGMAS"]},
    {"id": "8", "type": "KSamplerSelect", "outputs": ["SAMPLER"]},
    {"id": "9", "type": "SamplerCustom", "outputs": ["LATENT", "LATENT_DENOISED"]},
    {"id": "10", "type": "VAEDecode", "outputs": ["IMAGE"]},
    {"id": "11", "type": "SaveAnimatedWEBP", "outputs": []}
  ],
  "connections": [
    {"from": "1.MODEL", "to": "9.model"},
    {"from": "1.VAE", "to": "10.vae"},
    {"from": "2.CLIP", "to": "3.clip"},
    {"from": "2.CLIP", "to": "4.clip"},
    {"from": "3.CONDITIONING", "to": "5.positive"},
    {"from": "4.CONDITIONING", "to": "5.negative"},
    {"from": "5.CONDITIONING+", "to": "9.positive"},
    {"from": "5.CONDITIONING-", "to": "9.negative"},
    {"from": "6.LATENT", "to": "9.latent_image"},
    {"from": "7.SIGMAS", "to": "9.sigmas"},
    {"from": "8.SAMPLER", "to": "9.sampler"},
    {"from": "9.LATENT", "to": "10.samples"},
    {"from": "10.IMAGE", "to": "11.images"}
  ],
  "defaults": {
    "1.ckpt_name": "ltx-video-2b-v0.9.5.safetensors",
    "2.clip_name": "t5xxl_fp16.safetensors",
    "5.frame_rate": 24,
    "6.width": 768,
    "6.height": 512,
    "6.length": 97,
    "7.steps": 30,
    "7.max_shift": 2.05,
    "7.base_shift": 0.95,
    "8.sampler_name": "euler",
    "9.cfg": 3.0,
    "11.fps": 24
  }
}
